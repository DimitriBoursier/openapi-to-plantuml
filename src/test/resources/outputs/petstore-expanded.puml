"Pet" --> "1" "PetId"

"GET /pets 200" --> "*" "Pet"

"GET /pets" ..> "1" "GET /pets 200"  :  "200"

"GET /pets" ..> "1" "Error"  :  "default"

"POST /pets" ..> "1" "Pet"  :  "200"

"POST /pets" ..> "1" "Error"  :  "default"

"POST /pets" --> "1" "NewPet"

"GET /pets/{id}" ..> "1" "Pet"  :  "200"

"GET /pets/{id}" ..> "1" "Error"  :  "default"

"DELETE /pets/{id}" ..> "1" "DELETE /pets/{id} 204"  :  "204"

"DELETE /pets/{id}" ..> "1" "Error"  :  "default"

@enduml