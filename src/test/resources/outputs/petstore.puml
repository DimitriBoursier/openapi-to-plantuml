@startuml
hide <<Method>> circle
hide empty methods
hide empty fields
set namespaceSeparator none

class "Pet" {
  id : integer
  name : string
  tag : string {O}
}

class "Pets" {
}

class "Error" {
  code : integer
  message : string
}

class "GET /pets" <<Method>> {
  limit : integer {O}
}

class "GET /pets.limit" {
  value : integer
}

class "POST /pets" <<Method>> {
}

class "POST /pets 201" <<Response>> {
}

class "GET /pets/{petId}" <<Method>> {
  petId : string
}

class "GET /pets/{petId}.petId" {
  value : string
}

"Pets" --> "*" "Pet"

"GET /pets" ..> "1" "Pets"

"GET /pets" ..> "1" "Error"

"POST /pets" ..> "1" "POST /pets 201"

"POST /pets" ..> "1" "Error"

"GET /pets/{petId}" ..> "1" "Pet"

"GET /pets/{petId}" ..> "1" "Error"

@enduml