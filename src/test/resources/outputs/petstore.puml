@startuml
hide <<Path>> circle
hide <<Response>> circle
hide <<Parameter>> circle
hide empty methods
hide empty fields
set namespaceSeparator none

class "Pet" {
  id : integer
  name : string
  tag : string {O}
}

class "Pets" {
}

class "Error" {
  code : integer
  message : string
}

class "GET /pets" <<Path>> {
  limit : integer {O}
}

class "POST /pets" <<Path>> {
}

class "POST /pets 201" <<Response>> {
}

class "GET /pets/{petId}" <<Path>> {
  petId : string
}

"Pets" --> "*" "Pet"

"GET /pets" ..> "1" "Pets"  :  "200"

"GET /pets" ..> "1" "Error"  :  "default"

"POST /pets" ..> "1" "POST /pets 201"  :  "201"

"POST /pets" ..> "1" "Error"  :  "default"

"GET /pets/{petId}" ..> "1" "Pet"  :  "200"

"GET /pets/{petId}" ..> "1" "Error"  :  "default"

@enduml